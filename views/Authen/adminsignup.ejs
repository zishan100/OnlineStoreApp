<%- include('../include/head');-%>
<link rel="stylesheet" href="/css/login.css" />  
</head>
<body>
<%-include('../include/navbarnew')%>
<!-- <%-include('../include/alertmsg')%>  -->


<main class="main">
<h1>Admin Signup</h1> 
<%if(alertmsg){%>
<div class="message-container">
 <p class="error-msg"><%=alertmsg%></p>
</div>   
 <%}%>
<form action="/admin-signup" class="form" method="POST" novalidate>
  <div class="input-container">
    <span>First Name:</span>
    <input 
    class="take-input"
    type="text" 
    name="first"  
     
     />
  </div>
  <div class="input-container">
    <span>Last Name:</span>
    <input 
    class="take-input "
    type="text" 
    name="last"  
     
     />
  </div>

<div class="input-container">
 <span>Email:</span>
 <input 
 class="take-input <%=Validation.find(e=>e.param==='email') ? 'invalid' : ''%>"
 type="email" 
 name="email"  
 value="<%=userinput.email%>" 
  />
</div>
<div class="input-container">
 <span>Password:</span>
 <input 
 
 type="password" name="password" value="<%=userinput.password%>" class="take-input <%=Validation.find(e=>e.param==='password') ? 'invalid' : ''%>" />
</div>
<div class="input-container">
 <span>Conform Password:</span>
 <input type="password" name="ConformPassword" value="<%=userinput.ConformPassword%>" class="take-input <%=Validation.find(e=>e.param==='ConformPassword') ? 'invalid' : ''%>" />
</div>
<input type="hidden" name="_csrf" value="<%=csrfTokens%>" />

<button type="submit" class="submit-button">Signup</button>
<p class="Login-Link"> Do Have an Admin Account Click on <a class="login" href="/admin-login">Admin Login</a> </p> 
</form>
</main>   

<%-include('../include/end')%>

