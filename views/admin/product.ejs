<%- include('../include/head');-%>
 <link rel="stylesheet" href="/css/adminproduct.css" />   
 </head>
 <body>
 <%-include('../include/navbarnew')%>
<main class="main">
    
   
  <%if(products.length>0){%>
    <div class="main-container">
      <%for(let product of products){%>
    <div class="product-container">
    <h1 class="product-heading"><%=product.title%></h1>
    <div class="product-img">
      <img
        src="/img/<%=product.imgurl%>"
        alt="<%=product.title%>"
        class="img-size img-style"
      />
    </div>
    <div class="product-content">
      <h3 class="center">$ <%=product.price%></h3>
      <p>
       <%=product.description%>
     </p>
       <div class="edit-delete-button">
         <a href="/admin/editproduct/<%=product.id%>" class="edit-cart">Edit</a>
      
      <input type="hidden" name="_csrf" value="<%=csrfTokens%>">

      <input type="hidden" value="<%=product.id%>" name="productId"> 
      <button type="button" class="remove-cart" onclick="deleteproduct(this)">Delete</button>
      
       </div> 
       
      
    </div>
  </div>
  <%}%>  
    </div>
   
   <div class="pagination-container">
     <%if(currentPage!=1 && previousPage!=1){%>
       <a href="/admin/product/?page=1" class="link ">1</a>

     <%}%>
      
      <%if(hasPreviousPage){%>
        <a href="/admin/product/?page=<%=previousPage%>" class="link "><%=previousPage%> </a>
      <%}%>
      <a href="/admin/product/?page=<%=currentPage%>" class="link active"><%=currentPage%></a>
      <%if(hasNextPage){%>
       <a href="/admin/product/?page=<%=nextPage%>" class="link "><%=nextPage%></a>
      <%}%>
      <%if(currentPage!=lastPage && nextPage!=lastPage){%>
        <a href="/admin/product/?page=<%=lastPage%>" class="link "><%=lastPage%></a> 
        <%}%>
       

 
   </div>
  <%}else{%>
    <div class="no-items">
        <h1 >No Product Found</h1>
    </div>
  
  <%}%>

  <!-- <h1>Product</h1>
      <p>list of Product...</p> -->
</main>
<script src="/JS/deleteProduct.js"></script>
<%-include('../include/end')%>
